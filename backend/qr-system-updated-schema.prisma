enum QREntityType {
  ASSET
  LOCATION
  WORK_ORDER
  PM_SCHEDULE
  PART
  USER
  PORTAL
}

enum QRStatus {
  ACTIVE
  INACTIVE
  EXPIRED
  REVOKED
}

enum QRBatchStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
  CANCELLED
}

enum QRScanAction {
  VIEW
  EDIT
  CREATE_WORK_ORDER
  UPDATE_STATUS
  LOG_METER
  INSPECT
  DOWNLOAD
}

