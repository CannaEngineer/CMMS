# Database Configuration
# Keep this for Prisma CLI operations (migrations, etc.)
DATABASE_URL="file:./prisma/dev.db"

# Turso Configuration (for runtime)
# Get these values after creating your Turso database:
# 1. Run: turso db create cmms-db
# 2. Run: turso db show cmms-db (copy the libsql:// URL)
# 3. Run: turso db tokens create cmms-db (copy the token)
LIBSQL_URL="libsql://your-db-name-your-org.turso.io"
LIBSQL_AUTH_TOKEN="your-turso-auth-token"

# Frontend URL (for generating share links)
FRONTEND_URL=http://localhost:5173

# IP Hash Salt (change in production)
IP_HASH_SALT=change-this-in-production

# JWT Secret (change in production)
JWT_SECRET=your-secret-key

# Port
PORT=5000

# Email Configuration (MXroute SMTP)
SMTP_HOST=heracles.mxrouting.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=cmms@elevatedcompliance.tech
SMTP_PASS=your-smtp-password
SMTP_FROM=cmms@elevatedcompliance.tech
SMTP_FROM_NAME=Elevated Compliance CMMS

# Email Features
EMAIL_ENABLED=true
EMAIL_QUEUE_ENABLED=false

# Vercel Blob Storage (for development - add actual token in production)
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_dev_placeholder